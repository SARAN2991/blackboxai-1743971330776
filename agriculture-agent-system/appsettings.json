{
  "ConnectionStrings": {
    "AgricultureDB": "Server=.;Database=AgricultureDB;Integrated Security=true;"
  },
  "ApiEndpoints": {
    "WeatherApi": "https://api.weatherapi.com/v1",
    "MarketApi": "https://api.agrimarket.com/v2",
    "DiseaseApi": "https://api.plantix.io/v3"
  },
  "Jwt": {
    "Secret": "your-256-bit-secret-key-here-change-in-production",
    "Issuer": "agriculture-agent-system",
    "Audience": "agriculture-agent-system-users",
    "ExpiryInDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "File": {
      "Path": "Logs/agriculture-agent-{Date}.log",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 10485760
    }
  },
  "AllowedHosts": "*"
}